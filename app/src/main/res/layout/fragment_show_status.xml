<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanja.mymessenger.ShowStatusFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#2371f9">

                <TextView
                    android:text="Type in your mood!!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMyStatus"
                    android:layout_weight="1"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="74dp"
                    app:srcCompat="@drawable/edit12"
                    android:id="@+id/imageButtonChangeStatus"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_weight="0.05" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerViewShowStatus"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/linearLayout3"
                android:layout_marginTop="2dp"
                android:background="#b7c8f9" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
