<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="260dp"
        android:background="@drawable/border"
        android:layout_height="265dp"
        android:layout_gravity="right"
        android:backgroundTint="#bbb0cbff"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="200dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light"
            android:id="@+id/imageViewImageLayout"
            android:layout_height="150dp"
            android:layout_below="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewSenderNameImage"
            android:layout_below="@+id/imageViewImageLayout"
            android:layout_alignStart="@+id/imageViewImageLayout"
            android:layout_marginTop="17dp"
            android:textSize="12sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewTime1Image"
            android:layout_alignBaseline="@+id/txtViewSenderNameImage"
            android:layout_alignBottom="@+id/txtViewSenderNameImage"
            android:layout_alignEnd="@+id/imageViewImageLayout"
            android:textSize="12sp" />

        <ImageButton
            android:layout_width="50dp"
            app:srcCompat="@drawable/delete1"
            android:id="@+id/imageButton2"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageViewImageLayout"
            android:layout_marginLeft="72dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:srcCompat="@drawable/black_tick"
            android:id="@+id/imageViewTickImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>