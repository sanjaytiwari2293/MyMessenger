<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1"
    android:id="@+id/ll"
    android:layout_marginBottom="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="294dp"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        android:backgroundTint="#bbb0cbff"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewMessage">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtViewTime"
            android:weightSum="1">

            <TextView
                android:text="TextView"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewSenderName"
                android:layout_gravity="center"
                android:textSize="12sp" />

            <TextView
                android:text="TextView"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:id="@+id/txtViewTIme"
                android:textAlignment="textEnd"
                android:layout_weight="1.50"
                android:gravity="center"
                android:textSize="12sp" />

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/del_message"
                android:id="@+id/imageButtonDelMsgRight"
                android:scaleType="fitCenter"
                android:background="@null" />

            <ImageView
                android:layout_width="33dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/black_tick"
                android:id="@+id/imageViewTicks" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>